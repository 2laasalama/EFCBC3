<odoo>
    <data>

        <record id="module_category_check" model="ir.module.category">
            <field name="name">Check Request</field>
            <field name="sequence">70</field>
        </record>

        <record id="check_management_normal_payments_rule" model="ir.rule">
            <field name="name">normal.payments.rule</field>
            <field name="model_id" ref="model_normal_payments"/>
            <field name="domain_force">[('company_id','=',user.company_id.id)]</field>
            <field name="perm_unlink" eval="False"/>
        </record>
        <record id="check_management_rule" model="ir.rule">
            <field name="name">check.management.rule</field>
            <field name="model_id" ref="model_check_management"/>
            <field name="domain_force">[('company_id','=',user.company_id.id)]</field>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="module_category_check_request" model="ir.module.category">
            <field name="name">Check Request</field>
            <field name="parent_id" ref="module_category_check"/>
            <field name="sequence">70</field>
        </record>


        <record id="group_check_request_user" model="res.groups">
            <field name="name">Check User</field>
            <field name="category_id" ref="module_category_check_request"/>
            <field name="implied_ids" eval="[(4, ref('account.group_account_invoice'))]"/>
        </record>
        <record id="group_check_request_accountant" model="res.groups">
            <field name="name">Check Accountant</field>
            <field name="category_id" ref="module_category_check_request"/>
            <field name="implied_ids" eval="[(4, ref('group_check_request_user'))]"/>
        </record>
        <record id="group_check_request_advisor" model="res.groups">
            <field name="name">Check Advisor</field>
            <field name="category_id" ref="module_category_check_request"/>
            <field name="implied_ids" eval="[(4, ref('group_check_request_accountant'))]"/>
        </record>


    </data>
</odoo>