<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_picking_type_form_inherit" model="ir.ui.view">
            <field name="name">Operation Types</field>
            <field name="model">stock.picking.type</field>
            <field name="inherit_id" ref="stock.view_picking_type_form"/>
            <field name="arch" type="xml">


                <xpath expr="//field[@name='default_location_src_id']/.." position="after">
                    <group string="Reports">
                        <field name="has_report"/>
                        <field name="report_name" placeholder="أذن توريد مخازن"
                               attrs="{'invisible': [('has_report', '=', False)]}"/>
                        <field name="origin_report" placeholder="رقم أذن التوريد"
                               attrs="{'invisible': [('has_report', '=', False)]}"/>
                        <field name="maintenance_company_report" placeholder="شركة الصيانة"
                               attrs="{'invisible': [('has_report', '=', False)]}"/>
                        <field name="partner_name" placeholder="مستلم من"
                               attrs="{'invisible': [('has_report', '=', False)]}"/>
                        <field name="analytic_account_name" placeholder="الجهة الطالبة"
                               attrs="{'invisible': [('has_report', '=', False)]}"/>
                        <field name="report_signature" placeholder="حسابات المخازن"
                               attrs="{'invisible': [('has_report', '=', False)]}"/>
                    </group>
                </xpath>
            </field>
        </record>


    </data>
</odoo>