<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="unpacking_paperformat" model="report.paperformat">
        <field name="name">A4</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">40</field>
        <field name="margin_bottom">32</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">40</field>
        <field name="dpi">90</field>
    </record>

    <record id="purchase_line_xlsx" model="ir.actions.report">
        <field name="name">تفريغ عروض الأسعار</field>
        <field name="model">unpacking.rfq.line</field>
        <field name="report_type">xlsx</field>
        <field name="report_name">report_xlsx.purchase_line_xlsx</field>
        <field name="report_file">تفريغ عروض الأسعار</field>
        <field name="binding_model_id" eval="False"/>
        <field name="binding_type">report</field>
    </record>

    <record id="unpacking_report" model="ir.actions.report">
        <field name="name">مذكرة عرض</field>
        <field name="model">unpacking.rfq</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">purchase_line_report.unpacking_report_template</field>
        <field name="report_file">purchase_line_report.unpacking_report_template</field>
        <field name="print_report_name">'مذكرة عرض'</field>
        <field name="binding_model_id" eval="False"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="purchase_line_report.unpacking_paperformat"/>
    </record>
</odoo>
