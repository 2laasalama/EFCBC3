<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="quarter_incentive_report" model="ir.actions.report">
        <field name="name">Quarter Incentive Report</field>
        <field name="model">hr.quarter.incentive</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">hr_salary_attachment.quarter_incentive_report_template</field>
        <field name="report_file">hr_salary_attachment.quarter_incentive_report_template</field>
        <field name="print_report_name">'Quarter Incentive - %s' % (object.date_range_id.name).replace('/', '')
        </field>
        <field name="binding_model_id" ref="hr_salary_attachment.model_hr_quarter_incentive"/>
        <field name="binding_type">report</field>
    </record>

    <template id="quarter_incentive_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="efcbc_report_layout.internal_layout">
                    <div class="page" style="direction: rtl;">

                        <div class="row text-right" style="text-align: right;">
                            <div class="col-4"></div>
                            <div class="col-4 text-center">
                                <div>
                                    <t t-esc="o.name"/>
                                </div>
                                <div style="padding-left: 50px;padding-right: 50px;">
                                    <hr style="margin-bottom: -9px;"></hr>
                                    <hr></hr>
                                </div>
                                <div>
                                    <span>
                                        عن شهر :
                                    </span>
                                    <t t-esc="o.month_ar"/>
                                    <span>
                                        سنة :
                                    </span>
                                    <t t-esc="o.type_id.name"/>
                                </div>
                            </div>
                            <div class="col-4">
                                <div>
                                    <span>
                                        التاريخ :
                                    </span>
                                    <t t-esc="o.date"/>
                                </div>
                            </div>
                        </div>


                        <table class="table table-condensed table-bordered">
                            <thead class="text-center">
                                <tr>
                                    <th rowspan="2">الرقم</th>
                                    <th rowspan="2">الاسم</th>
                                    <th colspan="3">الشهور</th>
                                    <th rowspan="2">اجمالى الشهور</th>
                                    <th rowspan="2">الضرائب</th>
                                    <th rowspan="2">الصافى</th>
                                    <th rowspan="2">التوقيع</th>
                                </tr>
                                <tr>
                                    <th>
                                        <t t-esc="o.first_month"/>
                                    </th>
                                    <th>
                                        <t t-esc="o.second_month"/>
                                    </th>
                                    <th>
                                        <t t-esc="o.third_month"/>
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="text-center">
                                <t t-set="total_months" t-value="0"/>
                                <t t-set="total_taxes" t-value="0"/>
                                <t t-set="total_net" t-value="0"/>
                                <tr t-foreach="o.line_ids.filtered(lambda l: l.print)" t-as="line">
                                    <t t-set="total_months" t-value="total_months+line.total_months"/>
                                    <t t-set="total_taxes" t-value="total_taxes+line.taxes"/>
                                    <t t-set="total_net" t-value="total_net+line.net"/>
                                    <td>
                                        <span t-field="line.employee_code"/>
                                    </td>
                                    <td>
                                        <span t-field="line.employee_id.name"/>
                                    </td>
                                    <td>
                                        <span t-field="line.first_month"
                                              t-options="{'widget': 'float', 'precision': 2}"/>
                                    </td>
                                    <td>
                                        <span t-field="line.second_month"
                                              t-options="{'widget': 'float', 'precision': 2}"/>
                                    </td>
                                    <td>
                                        <span t-field="line.third_month"
                                              t-options="{'widget': 'float', 'precision': 2}"/>
                                    </td>
                                    <td>
                                        <span t-field="line.total_months"
                                              t-options="{'widget': 'float', 'precision': 2}"/>
                                    </td>
                                    <td>
                                        <span t-field="line.taxes" t-options="{'widget': 'float', 'precision': 2}"/>
                                    </td>
                                    <td>
                                        <span t-field="line.net" t-options="{'widget': 'float', 'precision': 2}"/>
                                    </td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td t-att-colspan="5">
                                        الاجمالى
                                    </td>
                                    <td>
                                        <span t-esc="total_months" t-options="{'widget': 'float', 'precision': 2}"/>
                                    </td>
                                    <td>
                                        <span t-esc="total_taxes" t-options="{'widget': 'float', 'precision': 2}"/>
                                    </td>
                                    <td>
                                        <span t-esc="total_net" t-options="{'widget': 'float', 'precision': 2}"/>
                                    </td>
                                    <td></td>
                                </tr>
                            </tbody>
                        </table>


                        <div class="row" style="text-align: right;margin-bottom: 8px;margin-top: 8px;">
                            <div class="col-4 text-center">
                                <div>
                                    نائب رئيس الأمانة التنفيذية
                                    للموارد البشرية والشئون الإدارية
                                </div>
                                <div class="text-right" style="margin-right: 50px;">
                                    <t t-esc="o.vice_hr_manager_title"/>
                                    <span>
                                        /
                                    </span>
                                </div>
                                <div>
                                    <t t-if="o.vice_hr_manager" t-esc="o.vice_hr_manager.name"/>
                                </div>
                            </div>
                            <div class="col-4 text-center">
                                <div>
                                    مستشار (أ) للموارد البشرية والشئون الإدارية
                                </div>
                                <div class="text-right" style="margin-right: 50px;">
                                    <t t-esc="o.hr_consultant_title"/>
                                    <span>
                                        /
                                    </span>
                                </div>
                                <div>
                                    <t t-if="o.hr_consultant" t-esc="o.hr_consultant.name"/>
                                </div>
                            </div>


                            <div class="col-4 text-center">
                                <div>
                                    رئيس الأمانة التنفيذية
                                    للموارد البشرية والشئون الإدارية
                                </div>
                                <div class="text-right" style="margin-right: 50px;">
                                    <t t-esc="o.hr_manager_title"/>
                                    <span>
                                        /
                                    </span>
                                </div>
                                <div>
                                    <t t-if="o.hr_manager" t-esc="o.hr_manager.name"/>
                                </div>
                            </div>
                        </div>

                        <div class="row" style="text-align: right;margin-bottom: 8px;margin-top: 8px;">
                            <div class="col-4 text-right">
                                المراجعة المالية:
                            </div>

                            <div class="col-4 text-center"></div>
                            <div style="font-size: 20px;font-weight: 700;" class="col-4 text-center">
                                <div>
                                    يعتمد ,,
                                </div>
                                <div>
                                    الامين العام
                                </div>
                                <div class="text-right" style="margin-right: 50px;">
                                    <t t-esc="o.general_secretary_title"/>
                                    <span>
                                        /
                                    </span>
                                </div>
                                <div>
                                    <t t-if="o.general_secretary" t-esc="o.general_secretary.name"/>
                                </div>
                            </div>


                        </div>


                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
