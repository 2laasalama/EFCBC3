<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="transportation_allowance_report" model="ir.actions.report">
        <field name="name">Transportation Allowance Report</field>
        <field name="model">hr.transportation.allowance</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">hr_salary_attachment.transportation_allowance_report_template</field>
        <field name="report_file">hr_salary_attachment.transportation_allowance_report_template</field>
        <field name="print_report_name">'Transportation Allowance - %s' % (object.date_range_id.name).replace('/', '')
        </field>
        <field name="binding_model_id" ref="hr_salary_attachment.model_hr_transportation_allowance"/>
        <field name="binding_type">report</field>
        <!--        <field name="paperformat_id" ref="hr_salary_attachment.paperformat_hrsummary"/>-->
    </record>

    <template id="transportation_allowance_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="efcbc_report_layout.internal_layout">
                    <div class="page" style="direction: rtl;">

                        <div class="row text-right" style="text-align: right;">
                            <div class="col-4"></div>
                            <div class="col-4 text-center">
                                <div>
                                    <t t-esc="o.name"/>
                                </div>
                                <div style="padding-left: 50px;padding-right: 50px;">
                                    <hr style="margin-bottom: -9px;"></hr>
                                    <hr></hr>
                                </div>
                                <div>
                                    <span>
                                        عن شهر :
                                    </span>
                                    <t t-esc="o.month_ar"/>
                                    <span>
                                        سنة :
                                    </span>
                                    <t t-esc="o.type_id.name"/>
                                </div>
                            </div>
                            <div class="col-4">
                                <div>
                                    <span>
                                        التاريخ :
                                    </span>
                                    <t t-esc="o.date"/>
                                </div>
                            </div>
                        </div>


                        <table class="table table-condensed table-bordered">
                            <thead class="text-center">
                                <tr>
                                    <td colspan="5"></td>
                                    <th t-att-colspan="len(o.get_leave_types())+2">الاجازات</th>
                                    <td colspan="3"></td>
                                </tr>
                                <tr>
                                    <th width="5%">الرقم</th>
                                    <th width="25%">الاسم</th>
                                    <th>أيام</th>
                                    <th>بدل الانتقال</th>
                                    <th>قيمة اليوم</th>
                                    <t t-foreach="o.get_leave_types()" t-as="leave">
                                        <th>
                                            <t t-esc="leave.name"/>
                                        </th>
                                    </t>
                                    <th>غياب</th>
                                    <th>اجمالى الاجازات</th>
                                    <th>اجمالى الخصم</th>
                                    <th>الصافى</th>
                                    <th>التوقيع</th>
                                </tr>
                            </thead>
                            <tbody class="text-center">
                                <t t-set="total" t-value="0"/>
                                <tr t-foreach="o.line_ids.filtered(lambda l: l.print)" t-as="line">
                                    <t t-set="total" t-value="total+line.net"/>
                                    <td>
                                        <span t-field="line.employee_code"/>
                                    </td>
                                    <td>
                                        <span t-field="line.employee_id.name"/>
                                    </td>
                                    <td>
                                        <span t-field="line.number_of_days"/>
                                    </td>
                                    <td>
                                        <span t-field="line.transportation_allowance"/>
                                    </td>
                                    <td>
                                        <span t-field="line.amount_of_day"/>
                                    </td>
                                    <t t-foreach="line.get_leave_summary()" t-as="leave">
                                        <td>
                                            <t t-esc="leave['number_of_days']"/>
                                        </td>
                                    </t>
                                    <td>
                                        <span t-field="line.total_absence"/>
                                    </td>
                                    <td>
                                        <span t-field="line.total_leaves"/>
                                    </td>
                                    <td>
                                        <span t-field="line.total_deduction"/>
                                    </td>
                                    <td>
                                        <span t-field="line.net"/>
                                    </td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td t-att-colspan="len(o.get_leave_types())+8">
                                        الاجمالى
                                    </td>
                                    <td>
                                        <span t-esc="total"/>
                                    </td>
                                    <td></td>
                                </tr>
                            </tbody>
                        </table>


                        <div class="row" style="text-align: right;margin-bottom: 8px;margin-top: 8px;">
                            <div class="col-4 text-center">
                                <div>
                                    نائب رئيس الأمانة التنفيذية
                                    للموارد البشرية والشئون الإدارية
                                </div>
                                <div class="text-right" style="margin-right: 50px;">
                                    <t t-esc="o.vice_hr_manager_title"/>
                                    <span>
                                        /
                                    </span>
                                </div>
                                <div>
                                    <t t-if="o.vice_hr_manager" t-esc="o.vice_hr_manager.name"/>
                                </div>
                            </div>
                            <div class="col-4 text-center">
                                <div>
                                    مستشار (أ) للموارد البشرية والشئون الإدارية
                                </div>
                                <div class="text-right" style="margin-right: 50px;">
                                    <t t-esc="o.hr_consultant_title"/>
                                    <span>
                                        /
                                    </span>
                                </div>
                                <div>
                                    <t t-if="o.hr_consultant" t-esc="o.hr_consultant.name"/>
                                </div>
                            </div>


                            <div class="col-4 text-center">
                                <div>
                                    رئيس الأمانة التنفيذية
                                    للموارد البشرية والشئون الإدارية
                                </div>
                                <div class="text-right" style="margin-right: 50px;">
                                    <t t-esc="o.hr_manager_title"/>
                                    <span>
                                        /
                                    </span>
                                </div>
                                <div>
                                    <t t-if="o.hr_manager" t-esc="o.hr_manager.name"/>
                                </div>
                            </div>
                        </div>

                        <div class="row" style="text-align: right;margin-bottom: 8px;margin-top: 8px;">
                            <div class="col-4 text-right">
                                المراجعة المالية:
                            </div>

                            <div class="col-4 text-center"></div>
                            <div style="font-size: 20px;font-weight: 700;" class="col-4 text-center">
                                <div>
                                    يعتمد ,,
                                </div>
                                <div>
                                    الامين العام
                                </div>
                                <div class="text-right" style="margin-right: 50px;">
                                    <t t-esc="o.general_secretary_title"/>
                                    <span>
                                        /
                                    </span>
                                </div>
                                <div>
                                    <t t-if="o.general_secretary" t-esc="o.general_secretary.name"/>
                                </div>
                            </div>


                        </div>


                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
