<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record id="view_employee_form_inherit" model="ir.ui.view">
            <field name="name">view.employee.form.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='birthday']" position="after">
                    <label for="age"/>
                    <div class="o_row">
                        <field name="age"/>Years
                    </div>
                </xpath>
                <xpath expr="//field[@name='identification_id']" position="after">
                    <field name="religion"/>
                </xpath>
                <xpath expr="//field[@name='gender']" position="after">

                    <field name="military_status" attrs="{'invisible':[('gender','!=', 'male')]}"/>

                </xpath>

                <xpath expr="//group[@name='active_group']" position="after">
                    <group string="Experience">
                        <field name="start_date"/>
                        <label for="experience_y"/>
                        <div class="o_row">
                            <field name="experience_y"/>
                            <span>Years</span>
                            <field name="experience_m"/>
                            <span>Months</span>
                            <field name="experience_d"/>
                            <span>Days</span>
                        </div>
                        <label for="unpaid_y"/>
                        <div class="o_row">
                            <field name="unpaid_y"/>
                            <span>Years</span>
                            <field name="unpaid_m"/>
                            <span>Months</span>
                            <field name="unpaid_d"/>
                            <span>Days</span>
                        </div>
                        <label for="part_time_y"/>
                        <div class="o_row">
                            <field name="part_time_y"/>
                            <span>Years</span>
                            <field name="part_time_m"/>
                            <span>Months</span>
                            <field name="part_time_d"/>
                            <span>Days</span>
                        </div>
                        <label for="net_experience_y"/>
                        <div class="o_row">
                            <field name="net_experience_y"/>
                            <span>Years</span>
                            <field name="net_experience_m"/>
                            <span>Months</span>
                            <field name="net_experience_d"/>
                            <span>Days</span>
                        </div>
                    </group>
                </xpath>

            </field>
        </record>
    </data>
</odoo>