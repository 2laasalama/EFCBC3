<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="payslip_summary_report" model="ir.actions.report">
        <field name="name">Payslip Summary Report</field>
        <field name="model">hr.payslip.summary</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">hr_payroll_summary.payslip_summary_report_template</field>
        <field name="report_file">hr_payroll_summary.payslip_summary_report_template</field>
        <field name="print_report_name">'Payslip Summary - %s' % (object.name).replace('/', '')</field>
        <field name="binding_model_id" ref="hr_payroll_summary.model_hr_payslip_summary"/>
        <field name="binding_type">report</field>
        <field name="is_stock_report" eval="True"/>
        <field name="paperformat_id" ref="hr_payroll_summary.paperformat_hrsummary"/>
    </record>

    <template id="payslip_summary_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="hr_payroll_summary.internal_layout">
                    <div class="page" style="direction: rtl;">


                        <div class="row" style="text-align: right;margin-bottom: 8px;margin-top: 8px;">
                            <div class="col-4 text-center">
                                <div>
                                    الأمانة التنفيذية للموارد البشرية والشئون الإدارية
                                </div>
                                <div>
                                    إدارة شئون العاملين والإستحقاقات
                                </div>
                            </div>
                            <div class="col-4">

                            </div>
                            <div class="col-4">
                                <div>
                                    <br></br>
                                </div>
                                <div class="table-bordered">
                                    <span>
                                        الحد الاقصى للحافز
                                    </span>
                                    <t t-set="motivation_ratio"
                                       t-value="int(o.motivation_ratio)"/>
                                    <t t-esc="motivation_ratio"/>
                                    <span>
                                        % والجهود
                                    </span>
                                    <t t-set="effort_ratio"
                                       t-value="int(o.effort_ratio)"/>
                                    <t t-esc="effort_ratio"/>
                                    <span>
                                        %
                                    </span>
                                </div>
                            </div>
                        </div>

                        <table class="table table-condensed table-bordered">
                            <tbody>
                                <tr class="text-right">
                                    <td width="50%">
                                        تحديد نسبة الحوافز والجهود الشهرية (نائب رئيس أمانة)
                                    </td>
                                    <td width="50%">
                                        <t t-esc="o.name"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <table class="table table-condensed table-bordered">
                            <thead class="text-center">
                                <tr>
                                    <th rowspan="4" width="3%">م</th>
                                    <th rowspan="4" width="30%">الاسم</th>
                                    <th rowspan="2">المستوى</th>
                                    <th t-att-colspan="len(o.get_leave_types())+2" rowspan="2">اجازات - غياب - أذون -
                                        تاخيرات
                                    </th>
                                    <th colspan="5">خصم وفقا لائحة الجزاءات</th>
                                    <th colspan="2" rowspan="2">قرارالسلطة المختصة</th>
                                </tr>
                                <tr>
                                    <th rowspan="3">ايام من الاجر اليومي</th>
                                    <th rowspan="3">ايام من الحافز والجهود والبدل</th>
                                    <th rowspan="3" style="font-size: 11px;">نسبة من الحافز والجهود والبدل قرار
                                        (2013/96)
                                    </th>
                                    <th rowspan="3">من الحافز والجهود مباشر</th>
                                    <th rowspan="3">انذار كتابي</th>
                                </tr>
                                <tr>
                                    <th rowspan="2">الوظيفى</th>
                                    <t t-foreach="o.get_leave_types()" t-as="leave">
                                        <th rowspan="2">
                                            <t t-esc="leave.name"/>
                                        </th>
                                    </t>
                                    <th rowspan="2">أيام غياب</th>
                                    <th rowspan="2">تاخيرات بالدقيقة</th>
                                    <th rowspan="2">نسبة من الحافز</th>
                                    <th rowspan="2">نسبة من الجهود</th>
                                </tr>
                                <tr>
                                </tr>
                            </thead>
                            <tbody class="text-center">
                                <tr t-foreach="o.line_ids" t-as="line">
                                    <td>
                                        <span t-field="line.sequence"/>
                                    </td>
                                    <td>
                                        <span t-field="line.employee_id.name"/>
                                    </td>
                                    <td>
                                        <span t-esc="', '.join(map(lambda x: (x.name), line.category_ids))"/>
                                    </td>
                                    <t t-foreach="line.get_leave_summary()" t-as="leave">
                                        <td>
                                            <t t-esc="leave['number_of_days']"/>
                                        </td>
                                    </t>
                                    <td>
                                        <span t-field="line.attendant_absence"/>
                                    </td>
                                    <td>
                                        <span t-field="line.total_lateness"/>
                                    </td>
                                    <td>
                                        <span t-field="line.penalty_days"/>
                                    </td>
                                    <td>
                                        <span t-field="line.motivation_effort_days"/>
                                    </td>
                                    <td>
                                        <t t-set="excessive_leave_deduction"
                                           t-value="int(line.excessive_leave_deduction)"/>
                                        <span t-esc="excessive_leave_deduction"/>
                                        <span>%</span>
                                    </td>
                                    <td>
                                        <t t-set="direct_motivation_effort"
                                           t-value="int(line.direct_motivation_effort)"/>
                                        <span t-esc="direct_motivation_effort"/>
                                        <span>%</span>
                                    </td>
                                    <td>
                                        <span t-if="line.written_warning">
                                            &#10004;
                                        </span>
                                        <span t-if="not line.written_warning">
                                            x
                                        </span>
                                    </td>
                                    <td>
                                        <t t-set="motivation_ratio"
                                           t-value="int(line.motivation_ratio)"/>
                                        <span t-esc="motivation_ratio"/>
                                        <span>%</span>
                                    </td>
                                    <td>
                                        <t t-set="effort_ratio"
                                           t-value="int(line.effort_ratio)"/>
                                        <span t-esc="effort_ratio"/>
                                        <span>%</span>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <div class="row" style="text-align: right;margin-bottom: 8px;margin-top: 8px;">
                            <div class="col-4 text-center">
                                <div>
                                    وحــدة شـئون العاملين
                                </div>
                                <div>
                                    <br></br>
                                </div>
                                <div class="text-right" style="margin-right: 50px;">
                                    <t t-esc="o.personnel_affairs_unit_title"/>
                                    <span>
                                        /
                                    </span>
                                </div>
                                <div>
                                    <t t-if="o.personnel_affairs_unit" t-esc="o.personnel_affairs_unit.name"/>
                                </div>
                            </div>
                            <div class="col-4 text-center">
                                <div>
                                    نائب رئيس الأمانة التنفيذية
                                </div>
                                <div>
                                    للموارد البشرية والشئون الإدارية
                                </div>
                                <div class="text-right" style="margin-right: 50px;">
                                    <t t-esc="o.vice_hr_manager_title"/>
                                    <span>
                                        /
                                    </span>
                                </div>
                                <div>
                                    <t t-if="o.vice_hr_manager" t-esc="o.vice_hr_manager.name"/>
                                </div>
                            </div>
                            <div class="col-4 text-center">
                                <div>
                                    رئيس الأمانة التنفيذية
                                </div>
                                <div>
                                    للموارد البشرية والشئون الإدارية
                                </div>
                                <div class="text-right" style="margin-right: 50px;">
                                    <t t-esc="o.hr_manager_title"/>
                                    <span>
                                        /
                                    </span>
                                </div>
                                <div>
                                    <t t-if="o.hr_manager" t-esc="o.hr_manager.name"/>
                                </div>
                            </div>
                        </div>

                        <div class="row"
                             style="font-size: 20px;font-weight: 700;text-align: right;margin-bottom: 8px;margin-top: 8px;">
                            <div class="col-4 text-center">
                            </div>
                            <div class="col-4 text-center">
                                <div>
                                    يعتمد ,,
                                </div>
                                <div>
                                    الامين العام
                                </div>
                                <div class="text-right" style="margin-right: 50px;">
                                    <t t-esc="o.general_secretary_title"/>
                                    <span>
                                        /
                                    </span>
                                </div>
                                <div>
                                    <t t-if="o.general_secretary" t-esc="o.general_secretary.name"/>
                                </div>
                            </div>

                            <div class="col-4 text-center">
                            </div>

                        </div>


                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
