<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_hr_payslip_summary_by_employees" model="ir.ui.view">
        <field name="name">payroll_payslip_summary_employees</field>
        <field name="model">hr.payslip.summary.employees</field>
        <field name="arch" type="xml">
            <form string="Payslips Summary by Employees">
                <header>
                    <button
                        icon="fa-cogs"
                        string="Generate"
                        name="compute_sheet"
                        type="object"
                        class="oe_highlight"
                    />
                </header>
                <group>
                    <span colspan="4" nolabel="1">
                        This wizard will generate payslips Summary for all selected employee(s).
                    </span>
                </group>
                <group colspan="4">
                    <separator string="Employees" colspan="4" />
                    <newline />
                    <field name="employee_ids" nolabel="1" />
                </group>
            </form>
        </field>
    </record>
    <record id="action_hr_payslip_summary_by_employees" model="ir.actions.act_window">
        <field name="name">Generate Payslip Summary</field>
        <field name="res_model">hr.payslip.summary.employees</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_hr_payslip_summary_by_employees" />
        <field name="target">new</field>
    </record>
</odoo>
