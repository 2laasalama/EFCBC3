<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="purchase_order_supply_order_report_form" model="ir.ui.view">
            <field name="name">purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">


                <xpath expr="//header" position="inside">
                    <button name="print_supply_order_report" type="object" string="أمر توريد" icon="fa-print"
                            class="btn-primary"
                            attrs="{'invisible': ['|',('state', '!=', 'purchase'),('total_supply_amount', '&lt;', 1)]}"/>
                    <button name="print_supply_order_report" type="object" string="أمر أسناد" icon="fa-print"
                            class="btn-primary"
                            attrs="{'invisible': ['|',('state', '!=', 'purchase'),('total_supply_amount', '&gt;', 1)]}"/>
                </xpath>

                <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="after">
                    <field name="warranty_id"/>
                </xpath>

                <field name="fiscal_position_id" position="after">
                    <field name="payment_mode"/>
                    <field name="executive_secretariat"/>
                    <field name="general_secretary"/>
                    <field name="supply_order_delivery"/>
                </field>

            </field>
        </record>


    </data>
</openerp>
