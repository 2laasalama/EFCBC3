<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="purchase_order_supply_order_report_form" model="ir.ui.view">
            <field name="name">purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">


                <xpath expr="//header" position="inside">
                    <button name="print_supply_order_report" type="object" string="أمر توريد" icon="fa-print"
                            class="btn-primary"
                            attrs="{'invisible': ['|',('state', '!=', 'purchase'),('order_type', '!=', 'supply')]}"/>

                    <button name="print_work_assignment_order_report" type="object" string="أمر أسناد" icon="fa-print"
                            class="btn-primary"
                            attrs="{'invisible': ['|',('state', '!=', 'purchase'),('order_type', '!=', 'works')]}"/>

                    <button name="print_supply_work_order_report" type="object" string="أمر أسناد وتوريد"
                            icon="fa-print"
                            class="btn-primary"
                            attrs="{'invisible': ['|',('state', '!=', 'purchase'),('order_type', '!=', 'both')]}"/>
                </xpath>

                <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="after">
                    <field name="warranty_id"/>
                </xpath>

                <xpath expr="//field[@name='fiscal_position_id']/.." position="after">
                    <group string="أمر توريد">
                        <field name="payment_mode"/>
                        <field name="executive_secretariat"/>
                        <field name="general_secretary"/>
                        <field name="supply_order_delivery"/>
                    </group>
                    <group string="أمر اسناد">
                        <field name="committe_recommendation_date"/>
                        <field name="committe_certified_date"/>
                        <field name="implementation_period"/>
                        <field name="location_receipt_date"/>
                        <field name="down_payment_rate"/>
                        <field name="final_insurance_value_rate"/>
                    </group>
                </xpath>

            </field>
        </record>


    </data>
</openerp>
