<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="hr_travelling_route_view_tree" model="ir.ui.view">
        <field name="name">hr.travelling.route.tree</field>
        <field name="model">hr.travelling.route</field>
        <field name="arch" type="xml">
            <tree>
                <field name="location_from"/>
                <field name="location_to"/>
                <field name="amount"/>
            </tree>
        </field>
    </record>

    <record id="hr_travelling_route_view_form" model="ir.ui.view">
        <field name="name">hr.travelling.route.form</field>
        <field name="model">hr.travelling.route</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="location_from"/>
                            <field name="location_to"/>
                        </group>
                        <group>
                            <field name="amount"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_travelling_route_action" model="ir.actions.act_window">
        <field name="name">Travelling Route</field>
        <field name="res_model">hr.travelling.route</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            action="hr_travelling_route_action"
            id="hr_travelling_route_menu"
            parent="hr_work_entry_contract_enterprise.menu_hr_payroll_configuration"
            sequence="99"
    />
</odoo>
