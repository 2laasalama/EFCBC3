<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="stock_picking_select_items" model="ir.ui.view">
        <field name="name">stock.picking.select.items</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="%(action_stock_report_quantity_by_location_prepare)d" type="action"
                        attrs="{'invisible': ['|',('location_dest_id', '=', False),('state', '!=', 'draft')]}"
                        string="Select Items" class="oe_edit_only"/>
            </xpath>
        </field>
    </record>
</odoo>