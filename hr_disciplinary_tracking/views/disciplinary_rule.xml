<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <odoo>

        <record id="disciplinary_rule_view_form" model="ir.ui.view">
            <field name="name">disciplinary_rule_view_form</field>
            <field name="model">disciplinary.rule</field>
            <field name="arch" type="xml">
                <form create="0" delete="0">
                    <sheet>
                        <field name="line_ids" nolabel="1">
                            <tree editable="bottom">
                                <field name="sequence" widget='handle'/>
                                <field name="days"/>
                                <field name="percentage"/>
                                <field name="applied_on"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="disciplinary_rule_action" model="ir.actions.act_window">
            <field name="name">Disciplinary Rule</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">disciplinary.rule</field>
            <field name="view_mode">form</field>
            <field name="res_id" ref="hr_disciplinary_tracking.disciplinary_rule_1"/>
        </record>

        <menuitem id="disciplinary_rule_menuitem"
                  parent="hr_disciplinary_tracking.disciplinary_action"
                  action="disciplinary_rule_action"
                  sequence="4"/>

    </odoo>
</openerp>
