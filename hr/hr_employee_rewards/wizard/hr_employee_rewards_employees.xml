<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_hr_employee_rewards_by_employees" model="ir.ui.view">
        <field name="name">hr.employee.rewards.employees.form</field>
        <field name="model">hr.employee.rewards.employees</field>
        <field name="arch" type="xml">
            <form string="Payslips Summary by Employees">
                <group colspan="4">
                    <separator string="Employees" colspan="4"/>
                    <newline/>
                    <field name="employee_ids" nolabel="1"/>
                </group>
                <footer>
                    <button
                            icon="fa-cogs"
                            string="Generate"
                            name="compute_sheet"
                            type="object"
                            class="oe_highlight"/>
                    <button
                            class="btn btn-sm btn-default"
                            special="cancel"
                            string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_hr_employee_rewards_by_employees" model="ir.actions.act_window">
        <field name="name">Select Employees</field>
        <field name="res_model">hr.employee.rewards.employees</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_hr_employee_rewards_by_employees"/>
        <field name="target">new</field>
    </record>
</odoo>
