<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="hr_travelling_allowance_view_tree" model="ir.ui.view">
        <field name="name">hr.travelling.allowance.tree</field>
        <field name="model">hr.travelling.allowance</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="employee_id"/>
                <field
                        name="state"
                        decoration-success="state == 'close'"
                        decoration-info="state == 'draft'"
                        widget="badge"
                        optional="show"
                />
            </tree>
        </field>
    </record>

    <record id="hr_travelling_allowance_view_form" model="ir.ui.view">
        <field name="name">hr.travelling.allowance.form</field>
        <field name="model">hr.travelling.allowance</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="done_action" type="object" string="Done" states="draft" class="oe_highlight"/>
                    <button name="close_action" type="object" string="Close" states="draft"/>
                    <button icon="fa-print" string="Print" states="draft,done" name="print_report" type="object"/>
                    <button string="Set to Draft" name="draft_action" type="object" states="close,done"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <label for="name" class="oe_edit_only"/>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="employee_code"/>
                            <field name="grade_id"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="type"/>
                            <field name="total_amount"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Travelling Allowance">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="date_from"/>
                                    <field name="date_to"/>
                                    <field name="status"/>
                                    <field name="type"/>
                                    <field name="number_of_days"/>
                                    <field name="amount_of_day"/>
                                    <field name="total_amount" sum="Total Amount"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Transportation Expenses">
                            <field name="expenses_ids">
                                <tree editable="bottom">
                                    <field name="date"/>
                                    <field name="location_from"/>
                                    <field name="location_to"/>
                                    <field name="total_amount" sum="Total Amount"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Other Expenses">
                            <field name="other_expenses_ids">
                                <tree editable="bottom">
                                    <field name="notes"/>
                                    <field name="date"/>
                                    <field name="location_from"/>
                                    <field name="location_to"/>
                                    <field name="type"/>
                                    <field name="total_amount" sum="Total Amount"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>

                    <group>
                        <group>
                            <label for="vice_hr_manager"/>
                            <div>
                                <field name="vice_hr_manager_title" placeholder="محاسب" class="oe_inline"/>
                                <span>/</span>
                                <field name="vice_hr_manager" class="oe_inline"/>
                            </div>
                        </group>
                        <group>
                            <label for="hr_consultant"/>
                            <div>
                                <field name="hr_consultant_title" placeholder="محاسب" class="oe_inline"/>
                                <span>/</span>
                                <field name="hr_consultant" class="oe_inline"/>
                            </div>
                        </group>
                        <group>
                            <label for="hr_manager"/>
                            <div>
                                <field name="hr_manager_title" placeholder="محاسب" class="oe_inline"/>
                                <span>/</span>
                                <field name="hr_manager" class="oe_inline"/>
                            </div>
                        </group>
                        <group>
                            <label for="general_secretary"/>
                            <div>
                                <field name="general_secretary_title" placeholder="محاسب" class="oe_inline"/>
                                <span>/</span>
                                <field name="general_secretary" class="oe_inline"/>
                            </div>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_travelling_allowance_action" model="ir.actions.act_window">
        <field name="name">Travelling Allowance</field>
        <field name="res_model">hr.travelling.allowance</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            action="hr_travelling_allowance_action"
            id="hr_travelling_allowance_menu"
            parent="hr_payroll.menu_hr_payroll_payslips"
            sequence="99"
    />
</odoo>
