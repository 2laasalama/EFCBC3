<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit Form View to Modify it -->
        <record id="hr_accrual_level_view_form" model="ir.ui.view">
            <field name="name">hr.leave.accrual.level.form</field>
            <field name="model">hr.leave.accrual.level</field>
            <field name="inherit_id" ref="hr_holidays.hr_accrual_level_view_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='action_with_unused_accruals']" position="after">
                    <field name="postpone_max_days"
                           attrs="{'invisible': [('action_with_unused_accruals', '!=', 'postponed')]}"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>