<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="medical_claims_report" model="ir.actions.report">
        <field name="name">Medical Claims Report</field>
        <field name="model">hr.medical.claims</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">hr_medical_claims.medical_claims_report_template</field>
        <field name="report_file">hr_medical_claims.medical_claims_report_template</field>
        <field name="print_report_name">'Medical Claims - %s' % (object.name).replace('/', '')</field>
        <field name="binding_model_id" ref="hr_medical_claims.model_hr_medical_claims"/>
        <field name="binding_type">report</field>
    </record>

    <template id="medical_claims_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="efcbc_report_layout.internal_layout">
                    <div class="page" style="direction: rtl;">
                        <div class="text-center">
                            طباعة مطالبة
                        </div>


                        <div class="row text-right" style="text-align: right;">
                            <div class="col-6">
                                <div>
                                    <span>
                                        كود الجهة :
                                    </span>
                                    <t t-esc="o.id_number"/>
                                </div>
                                <div>
                                    <span>
                                        فئة الجهة :
                                    </span>
                                    <t t-esc="o.provider_category"/>
                                </div>
                                <div>
                                    <span>
                                        تاريخ المطالبة :
                                    </span>
                                    <t t-esc="o.date"/>
                                </div>
                            </div>
                            <div class="col-6">
                                <div>
                                    <span>
                                        اسم الجهة :
                                    </span>
                                    <t t-esc="o.partner_id.name"/>
                                </div>
                                <div>
                                    <span>
                                        مسلسل المطالبة الجهة :
                                    </span>
                                    <t t-esc="o.name"/>
                                </div>
                            </div>
                        </div>


                        <table class="table table-condensed table-bordered">
                            <thead class="text-center">
                                <tr>
                                    <th width="10%">المسلسل</th>
                                    <th width="10%">الرقم</th>
                                    <th width="40%">الاسم</th>
                                    <th>تاريخ الخدمة</th>
                                    <th>القيمة الفعلية</th>
                                </tr>
                            </thead>
                            <tbody class="text-center">
                                <tr t-foreach="o.line_ids" t-as="line">
                                    <td>
                                        <span t-field="line.sequence"/>
                                    </td>
                                    <td>
                                        <span t-field="line.employee_code"/>
                                    </td>
                                    <td>
                                        <span t-field="line.employee_id.name"/>
                                    </td>
                                    <td>
                                        <span t-field="line.date"/>
                                    </td>
                                    <td>
                                        <span t-field="line.actual_amount"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>


                        <div class="row" style="text-align: right;margin-bottom: 8px;margin-top: 8px;">
                            <div class="col-4 text-center">
                                <div>
                                    نائب رئيس الأمانة التنفيذية
                                    للموارد البشرية والشئون الإدارية
                                </div>
                                <div class="text-right" style="margin-right: 50px;">
                                    <t t-esc="o.vice_hr_manager_title"/>
                                    <span>
                                        /
                                    </span>
                                </div>
                                <div>
                                    <t t-if="o.vice_hr_manager" t-esc="o.vice_hr_manager.name"/>
                                </div>
                            </div>
                            <div class="col-4 text-center">
                                <div>
                                    مستشار (أ) للموارد البشرية والشئون الإدارية
                                </div>
                                <div class="text-right" style="margin-right: 50px;">
                                    <t t-esc="o.hr_consultant_title"/>
                                    <span>
                                        /
                                    </span>
                                </div>
                                <div>
                                    <t t-if="o.hr_consultant" t-esc="o.hr_consultant.name"/>
                                </div>
                            </div>


                            <div class="col-4 text-center">
                                <div>
                                    رئيس الأمانة التنفيذية
                                    للموارد البشرية والشئون الإدارية
                                </div>
                                <div class="text-right" style="margin-right: 50px;">
                                    <t t-esc="o.hr_manager_title"/>
                                    <span>
                                        /
                                    </span>
                                </div>
                                <div>
                                    <t t-if="o.hr_manager" t-esc="o.hr_manager.name"/>
                                </div>
                            </div>
                        </div>

                        <div class="row" style="text-align: right;margin-bottom: 8px;margin-top: 8px;">
                            <div class="col-4 text-right">
                                المراجعة المالية:
                            </div>

                            <div class="col-4 text-center"></div>
                            <div style="font-size: 20px;font-weight: 700;" class="col-4 text-center">
                                <div>
                                    يعتمد ,,
                                </div>
                                <div>
                                    الامين العام
                                </div>
                                <div class="text-right" style="margin-right: 50px;">
                                    <t t-esc="o.general_secretary_title"/>
                                    <span>
                                        /
                                    </span>
                                </div>
                                <div>
                                    <t t-if="o.general_secretary" t-esc="o.general_secretary.name"/>
                                </div>
                            </div>


                        </div>


                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
