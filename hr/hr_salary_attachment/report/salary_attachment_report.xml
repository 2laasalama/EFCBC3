<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="salary_attachment_report" model="ir.actions.report">
        <field name="name">Salary Attachment Report</field>
        <field name="model">salary.attachment.report.wizard</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">hr_salary_attachment.salary_attachment_report_template</field>
        <field name="report_file">hr_salary_attachment.salary_attachment_report_template</field>
        <field name="print_report_name">'Salary Attachment - %s' % (object.name).replace('/', '')</field>
        <field name="binding_type">report</field>
        <!--        <field name="paperformat_id" ref="hr_salary_attachment.paperformat_hrsummary"/>-->
    </record>

    <template id="salary_attachment_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="efcbc_report_layout.internal_layout">
                    <div class="page" style="direction: rtl;">

                        <div class="row text-right" style="text-align: right;">
                            <div class="col-4"></div>
                            <div class="col-4 text-center">
                                <div>
                                    <strong>
                                        <t t-esc="o.name"/>
                                    </strong>
                                </div>
                                <div style="padding-left: 50px;padding-right: 50px;">
                                    <hr style="margin-bottom: -9px;"></hr>
                                    <hr></hr>
                                </div>
                                <div>
                                    <span>
                                        عن شهر :
                                    </span>
                                    <t t-esc="o.month_ar"/>
                                    <span>
                                        سنة :
                                    </span>
                                    <t t-esc="o.type_id.name"/>
                                </div>
                            </div>
                            <div class="col-4">
                                <div>
                                    <span>
                                        التاريخ :
                                    </span>
                                    <t t-esc="o.date"/>
                                </div>
                            </div>
                        </div>


                        <table class="table table-condensed table-bordered">
                            <thead class="text-center">
                                <tr t-if="o.type != 'night_allowance'">
                                    <th width="5%">رقم الملف</th>
                                    <th width="25%">الاسم</th>
                                    <th>المرتب</th>
                                    <th t-if="o.type == 'rewards'">قيمة المكافأة</th>
                                    <th t-if="o.type == 'vacation_allowance'">عدد الايام</th>
                                    <th t-if="o.type == 'vacation_allowance'">اضافى</th>
                                    <th t-if="o.type == 'vacation_allowance'">بدل انتقال</th>
                                    <th t-if="o.type == 'night_allowance'">أجمالى</th>
                                    <th>الضرائب</th>
                                    <th>الصافى</th>
                                    <th>التوقيع</th>
                                </tr>
                                <tr t-if="o.type == 'night_allowance'">
                                    <th rowspan="2" width="5%">رقم الملف</th>
                                    <th rowspan="2" width="25%">الاسم</th>
                                    <th colspan="2">عدد الايام</th>
                                    <th colspan="2">قيمة اليوم</th>
                                    <th colspan="2">البدلات</th>
                                    <th rowspan="2">أجمالى</th>
                                    <th rowspan="2">الضرائب</th>
                                    <th rowspan="2">الصافى</th>
                                    <th rowspan="2">التوقيع</th>
                                </tr>
                                <tr t-if="o.type == 'night_allowance'">
                                    <th>بدل اعاشة</th>
                                    <th>بدل سهر</th>
                                    <th>بدل اعاشة</th>
                                    <th>بدل سهر</th>
                                    <th>بدل اعاشة</th>
                                    <th>بدل سهر</th>
                                </tr>
                            </thead>
                            <tbody class="text-center">
                                <tr t-foreach="o.get_tabel_data()" t-as="line">
                                    <td>
                                        <span t-esc="line['code']"/>
                                    </td>
                                    <td>
                                        <span t-esc="line['employee_name']"/>
                                    </td>

                                    <td t-if="o.type in ['rewards','vacation_allowance']">
                                        <span t-esc="line['salary']"/>
                                    </td>

                                    <td t-if="o.type == 'rewards' ">
                                        <span t-esc="line['reward']"/>
                                    </td>

                                    <td t-if="o.type == 'vacation_allowance'">
                                        <span t-esc="line['number_of_days']"/>
                                    </td>
                                    <td t-if="o.type == 'vacation_allowance'">
                                        <span t-esc="line['overtime_amount_per_day']"/>
                                    </td>
                                    <td t-if="o.type == 'vacation_allowance'">
                                        <span t-esc="line['transportation_allowance_per_day']"/>
                                    </td>

                                    <td t-if="o.type == 'night_allowance'">
                                        <span t-esc="line['night_allowance']"/>
                                    </td>
                                    <td t-if="o.type == 'night_allowance'">
                                        <span t-esc="line['living_allowance']"/>
                                    </td>
                                    <td t-if="o.type == 'night_allowance'">
                                        <span t-esc="line['contract_night_allowance']"/>
                                    </td>
                                    <td t-if="o.type == 'night_allowance'">
                                        <span t-esc="line['contract_living_allowance']"/>
                                    </td>
                                    <td t-if="o.type == 'night_allowance'">
                                        <span t-esc="line['total_night_allowance']"/>
                                    </td>
                                    <td t-if="o.type == 'night_allowance'">
                                        <span t-esc="line['total_living_allowance']"/>
                                    </td>
                                    <td t-if="o.type == 'night_allowance'">
                                        <span t-esc="line['total']"/>
                                    </td>

                                    <td>
                                        <span t-esc="line['taxes']"/>
                                    </td>
                                    <td>
                                        <span t-esc="line['net']"/>
                                    </td>
                                    <td></td>
                                </tr>
                                <tr t-if="o.type=='rewards'">
                                    <td colspan="3">
                                        الاجمالى
                                    </td>
                                    <td>
                                        <span t-esc="o.get_total_rewards()['reward']"/>
                                    </td>
                                    <td>
                                        <span t-esc="o.get_total_rewards()['taxes']"/>
                                    </td>
                                    <td>
                                        <span t-esc="o.get_total_rewards()['net']"/>
                                    </td>
                                    <td></td>
                                </tr>
                            </tbody>
                        </table>


                        <div class="row" style="text-align: right;margin-bottom: 8px;margin-top: 8px;">
                            <div class="col-4 text-center">
                                <div>
                                    نائب رئيس الأمانة التنفيذية
                                    للموارد البشرية والشئون الإدارية
                                </div>
                                <div class="text-right" style="margin-right: 50px;">
                                    <t t-esc="o.vice_hr_manager_title"/>
                                    <span>
                                        /
                                    </span>
                                </div>
                                <div>
                                    <t t-if="o.vice_hr_manager" t-esc="o.vice_hr_manager.name"/>
                                </div>
                            </div>
                            <div class="col-4 text-center">
                                <div>
                                    مستشار (أ) للموارد البشرية والشئون الإدارية
                                </div>
                                <div class="text-right" style="margin-right: 50px;">
                                    <t t-esc="o.hr_consultant_title"/>
                                    <span>
                                        /
                                    </span>
                                </div>
                                <div>
                                    <t t-if="o.hr_consultant" t-esc="o.hr_consultant.name"/>
                                </div>
                            </div>


                            <div class="col-4 text-center">
                                <div>
                                    رئيس الأمانة التنفيذية
                                    للموارد البشرية والشئون الإدارية
                                </div>
                                <div class="text-right" style="margin-right: 50px;">
                                    <t t-esc="o.hr_manager_title"/>
                                    <span>
                                        /
                                    </span>
                                </div>
                                <div>
                                    <t t-if="o.hr_manager" t-esc="o.hr_manager.name"/>
                                </div>
                            </div>
                        </div>

                        <div class="row" style="text-align: right;margin-bottom: 8px;margin-top: 8px;">
                            <div class="col-4 text-right">
                                المراجعة المالية:
                            </div>

                            <div class="col-4 text-center"></div>
                            <div style="font-size: 20px;font-weight: 700;" class="col-4 text-center">
                                <div>
                                    يعتمد ,,
                                </div>
                                <div>
                                    الامين العام
                                </div>
                                <div class="text-right" style="margin-right: 50px;">
                                    <t t-esc="o.general_secretary_title"/>
                                    <span>
                                        /
                                    </span>
                                </div>
                                <div>
                                    <t t-if="o.general_secretary" t-esc="o.general_secretary.name"/>
                                </div>
                            </div>


                        </div>


                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
