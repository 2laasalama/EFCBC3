<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <odoo>

        <record id="edit_holiday_status_form" model="ir.ui.view">
            <field name="name">hr.leave.type.inherit.efcbc</field>
            <field name="model">hr.leave.type</field>
            <field name="inherit_id" ref="hr_holidays.edit_holiday_status_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='allocation_validation_type']"
                       position="after">
                    <h2>Other Options</h2>
                    <field name="exclude_penalty"/>
                    <field name="exclude_weekends"/>
                    <field name="exclude_holidays"/>
                    <field name="payroll_summary"/>
                    <field name="leave_category"/>
                </xpath>
            </field>
        </record>

    </odoo>
</openerp>
