<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_inherit_form_view" model="ir.ui.view">
        <field name="name">product.template.product.inherit.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <div name="options" position="inside">
                <span class="d-inline-block">
                    <field name="is_asset"/>
                    <label for="is_asset"/>
                </span>
            </div>
            <notebook>
                <page string="معلومات أخري" attrs="{'invisible': [('is_asset', '=', False)]}">
                    <group>
                        <group>
                            <field name="brand_id"/>
                            <field name="manufacture_company_id"/>
                        </group>
                        <group>
                            <field name="model_id"/>
                            <field name="description"/>
                        </group>
                    </group>
                </page>
            </notebook>
        </field>
    </record>


</odoo>
