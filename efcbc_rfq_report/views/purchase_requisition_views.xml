<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_purchase_requisition_form_inherit" model="ir.ui.view">
            <field name="name">purchase.requisition.form.inherit</field>
            <field name="model">purchase.requisition</field>
            <field name="inherit_id" ref="purchase_requisition.view_purchase_requisition_form"/>
            <field name="arch" type="xml">
                <field name="vendor_id" position="after">
                    <field name="phone" attrs="{'readonly': [('state', 'not in', ['draft','in_progress'])]}"/>
                    <field name="email" attrs="{'readonly': [('state', 'not in', ['draft','in_progress'])]}"/>
                </field>
            </field>
        </record>
    </data>
</odoo>
