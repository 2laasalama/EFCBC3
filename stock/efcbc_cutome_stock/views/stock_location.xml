<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="stock_location_view_form_editable" model="ir.ui.view">
        <field name="name">stock.location.form.editable</field>
        <field name="model">stock.location</field>
        <field name="inherit_id" ref="stock.view_location_form"/>
        <field name="groups_id" eval="[(4, ref('stock.group_stock_multi_locations'))]"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='removal_strategy_id']/.." position="after">
                <group string="لجنة الكهنة">
                    <field name="scrap_committee_approval"/>
                    <field name="scrap_committee_member_ids" widget="many2many_tags"
                           attrs="{'invisible': [('scrap_committee_approval', '=', False)],'required': [('scrap_committee_approval', '=', True)]}"/>

                </group>
                 <group string="اللجنة المالية">
                    <field name="finance_committee_approval"/>
                    <field name="finance_committee_member_ids" widget="many2many_tags"
                           attrs="{'invisible': [('finance_committee_approval', '=', False)],'required': [('finance_committee_approval', '=', True)]}"/>

                </group>
            </xpath>

        </field>
    </record>

</odoo>
