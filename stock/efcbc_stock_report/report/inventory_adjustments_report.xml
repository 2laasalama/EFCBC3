<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inventory_adjustments_report_action" model="ir.actions.report">
        <field name="name">محضر جرد</field>
        <field name="model">stock.quant</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">efcbc_stock_report.inventory_adjustments_report</field>
        <field name="report_file">efcbc_stock_report.inventory_adjustments_report</field>
        <field name="print_report_name">'محضر جرد'</field>
        <field name="binding_type">report</field>
        <field name="binding_model_id" ref="stock.model_stock_quant"/>
    </record>

    <template id="inventory_adjustments_report">
        <t t-call="web.html_container">
            <t t-call="efcbc_report_layout.internal_layout">
                <div class="page" style="direction: rtl;">
                    <div style="text-align: center;">
                        <h2>محضر جرد</h2>
                        <h3>
                            <span>عن عام</span>
                            <t t-esc="data['year']"/>
                        </h3>
                    </div>
                    <br/>


                    <table class="table table-condensed table-bordered">
                        <thead>
                            <tr>
                                <th rowspan="2" style="text-align: center;width: 5%;">
                                    <strong>م</strong>
                                </th>
                                <th rowspan="2" style="text-align: center; width: 35%;">
                                    <strong>البيان</strong>
                                </th>

                                <th rowspan="2" style="text-align: center;width: 10%;">
                                    <strong>رصيد دفترى</strong>
                                </th>
                                <th rowspan="2" style="text-align: center;width: 10%;">
                                    <strong>رصيد فعلى</strong>
                                </th>
                                <th rowspan="2" style="text-align: center;width: 10%;">
                                    <strong>الفروق</strong>
                                </th>
                                <th colspan="2" style="text-align: center;width: 30">
                                    <strong>رأى لجنة الاشراف</strong>
                                </th>
                            </tr>
                            <tr>
                                <th style="text-align: center;width: 15%;">
                                    <strong>القرار</strong>
                                </th>
                                <th style="text-align: center;width: 15%;">
                                    <strong>يحمل على المتسبب</strong>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="sequence" t-value="0"/>
                            <tr t-foreach="docs" t-as="line">
                                <t t-set="sequence" t-value="sequence+1"/>
                                <td class="text-center">
                                    <span t-esc="sequence"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="line.product_id.name"/>
                                </td>
                                <td class="text-center">
                                    <span t-field="line.inventory_quantity"/>
                                </td>
                                <td class="text-center">
                                    <span t-field="line.quantity"/>
                                </td>
                                <td class="text-center">
                                    <span t-field="line.inventory_diff_quantity"/>
                                </td>
                                <td class="text-center">
                                    <span t-if="line.accept">
                                        موافق
                                    </span>
                                    <span t-if="not line.accept">
                                        رفض
                                    </span>
                                </td>
                                <td class="text-center">
                                    <span t-if="line.carry_on">
                                        نعم
                                    </span>
                                    <span t-if="not line.carry_on">
                                        لا
                                    </span>
                                </td>
                            </tr>
                        </tbody>
                    </table>


                </div>
            </t>
        </t>
    </template>
</odoo>
