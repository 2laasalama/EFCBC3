<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="receipt_order_report" model="ir.actions.report">
        <field name="name">اذن توريد</field>
        <field name="model">stock.picking</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">efcbc_stock_report.receipt_order_report_template</field>
        <field name="report_file">efcbc_stock_report.receipt_order_report_template</field>
        <field name="print_report_name">'اذن توريد - %s' % (object.name).replace('/', '')</field>
        <field name="binding_model_id" eval="False"/>
        <field name="binding_type">report</field>
        <field name="is_stock_report" eval="True"/>
    </record>

    <template id="receipt_order_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="efcbc_report_layout.internal_layout">
                    <div class="page" style="direction: rtl;">
                        <div class="row" style="text-align: right;">
                            <div class="col-4"></div>
                            <div class="col-4" style="text-align: center;">
                                <h2>
                                    <t t-esc="o.report_name"/>
                                </h2>
                            </div>
                            <div class="col-4" style="margin-top: 10px;">
                                <span t-if="o.state != 'done'">
                                    New
                                </span>
                                <t t-if="o.state == 'done'" t-esc="o.name"/>
                            </div>
                        </div>
                        <br/>
                        <div class="row" style="text-align: right;">
                            <div class="col-6">
                                <div>
                                    <span>التاريخ :</span>
                                    <t t-esc="context_timestamp(o.scheduled_date).strftime('%Y-%m-%d')"/>
                                </div>
                                <div t-if="not o.maintenance_company_id">
                                    <span>
                                        رقم امر التوريد:
                                    </span>
                                    <t t-esc="o.origin"/>


                                </div>
                                <div t-if="o.maintenance_company_id">
                                    <span>
                                        شركة الصيانة:
                                    </span>
                                    <t t-esc="o.maintenance_company_id.name"/>


                                </div>
                            </div>
                            <div class="col-6">
                                <div>
                                    <span>
                                        الاصناف وردت من شركة:
                                    </span>
                                    <t t-esc="o.partner_id.name"/>
                                </div>
                                <div>
                                    <span>
                                        الجهة الطالبة:
                                    </span>
                                    <t t-esc="o.analytic_account_id.name"/>
                                </div>

                            </div>
                        </div>
                        <div>
                            <hr style="border: 2px solid black;    margin-top: -2px;"/>
                        </div>


                        <table class="table table-condensed table-bordered">
                            <thead>
                                <tr>
                                    <th style="text-align: center;width: 10%;">
                                        <strong>الكمية</strong>
                                    </th>
                                    <th style="text-align: center;width: 20%;">
                                        <strong>الوحدة</strong>
                                    </th>
                                    <th style="text-align: center;width: 15">
                                        <strong>رقم الصنف</strong>
                                    </th>
                                    <th style="text-align: center; width: 35%;">
                                        <strong>البيان</strong>
                                    </th>
                                    <th style="text-align: center; width: 10%;">
                                        <strong>الرصيد</strong>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="total_qty" t-value="0"/>
                                <tr t-foreach="o.move_lines" t-as="line">
                                    <t t-set="total_qty" t-value="total_qty+line.product_qty"/>
                                    <td style="text-align: center;">
                                        <span t-field="line.product_qty"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="line.product_uom.name"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="line.product_id.default_code"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="line.product_id.name"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="line.product_id.qty_available"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="text-right" colspan="5">
                                        <span>إجمالى الكمية فقط</span>
                                        <span t-esc="total_qty"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="row" style="text-align: right;">
                            <div class="col-4">
                                <span>
                                    <strong>أمين المخازن/</strong>
                                </span>
                            </div>
                            <div class="col-4">
                                <span>
                                    <span t-esc="o.report_signature"/>
                                </span>
                            </div>
                            <div class="col-4">
                                <span>
                                    <strong>أعتماد</strong>
                                </span>
                            </div>


                        </div>


                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
