<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mail_template_rfq_workflow" model="mail.template">
        <field name="name">RFQ WorkFlow: Approval Notifications</field>
        <field name="model_id" ref="purchase.model_purchase_order"/>
        <field name="subject">Need Approval</field>
        <field name="email_from">{{ (object.user_id.email_formatted or user.email_formatted) }}</field>
        <field name="body_html" type="html">
            <div>
                Hello There,<br />
                RFQ with Number <b t-out="object.name"></b> need Your Approval.<br />
                You may take follow-up with him.<br />
                <a class="btn btn-primary" role="button" t-attf-href="/web?#id={{object.id}}&amp;model=purchase.order">View Details</a><br />
                Thank You...<br />
            </div>
        </field>
    </record>

</odoo>
