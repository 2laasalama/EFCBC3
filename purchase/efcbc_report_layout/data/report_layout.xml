<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="paperformat_efcbc" model="report.paperformat">
            <field name="name">efcbc Paperformat</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">10</field>
            <field name="margin_bottom">32</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
        </record>

        <template id="internal_layout">
            <t t-if="not o" t-set="o" t-value="doc"/>

            <t t-if="not company">
                <!-- Multicompany -->
                <t t-if="company_id">
                    <t t-set="company" t-value="company_id"/>
                </t>
                <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                    <t t-set="company" t-value="o.company_id.sudo()"/>
                </t>
                <t t-else="else">
                    <t t-set="company" t-value="res_company"/>
                </t>
            </t>

            <div class="header">
                <div style="text-align: center;">
                    <img style="max-width: 850px;"
                         src="/efcbc_report_layout/static/src/img/header.jpg"/>
                </div>
            </div>

            <div class="article" style="font-family:efcbc_arial" t-att-data-oe-model="o and o._name"
                 t-att-data-oe-id="o and o.id"
                 t-att-data-oe-lang="o and o.env.context.get('lang')">
                <t t-out="0"/>
            </div>

            <div t-attf-class="footer">
                <div class="text-center">
                    <div t-if="report_type == 'pdf'" class="text-muted">
                        Page:
                        <span class="page"/>
                        /
                        <span class="topage"/>
                    </div>
                </div>
            </div>
        </template>

        <template id="external_layout">
            <t t-if="not o" t-set="o" t-value="doc"/>

            <t t-if="not company">
                <!-- Multicompany -->
                <t t-if="company_id">
                    <t t-set="company" t-value="company_id"/>
                </t>
                <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                    <t t-set="company" t-value="o.company_id.sudo()"/>
                </t>
                <t t-else="else">
                    <t t-set="company" t-value="res_company"/>
                </t>
            </t>

            <div class="header">
                <div style="text-align: center;">
                    <img style="max-width: 850px;"
                         src="/efcbc_report_layout/static/src/img/header.jpg"/>
                </div>
            </div>
            <div class="article" style="font-family:efcbc_arial" t-att-data-oe-model="o and o._name"
                 t-att-data-oe-id="o and o.id"
                 t-att-data-oe-lang="o and o.env.context.get('lang')">
                <t t-out="0"/>
            </div>
            <div t-attf-class="footer o_standard_footer">
                <div class="text-center">
                    <div style="text-align: center;">
                        <img style="max-width: 850px;"
                             src="/efcbc_report_layout/static/src/img/footer.jpeg"/>
                    </div>

                    <div t-if="report_type == 'pdf'" class="text-muted">
                        Page:
                        <span class="page"/>
                        /
                        <span class="topage"/>
                    </div>
                </div>
            </div>
        </template>


    </data>
</odoo>