<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <odoo>

        <record id="excessive_leave_policy_view_form" model="ir.ui.view">
            <field name="name">excessive_leave_policy_view_form</field>
            <field name="model">excessive.leave.policy</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <field name="policy_lines" nolabel="1">
                            <tree editable="bottom">
                                <field name="sequence" widget='handle'/>
                                <field name="name"/>
                                <field name="from_day"/>
                                <field name="to_day"/>
                                <field name="deduction"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="excessive_leave_policy_action" model="ir.actions.act_window">
            <field name="name">Excessive Time-Off Policy</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">excessive.leave.policy</field>
            <field name="view_mode">form</field>
            <field name="res_id" ref="efcbc_cutome_hr.excessive_leave_policy_1"/>
        </record>

        <menuitem id="excessive_leave_policy_menuitem"
                  parent="hr_holidays.menu_hr_holidays_configuration"
                  groups="hr_holidays.group_hr_holidays_manager"
                  action="excessive_leave_policy_action"
                  sequence="3"/>

    </odoo>
</openerp>
